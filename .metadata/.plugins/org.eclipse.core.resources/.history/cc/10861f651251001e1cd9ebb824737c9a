//외부 url 접속 정보 알아오기

import java.net.URL;
import java.net.URLConnection;

public class new3 {

	public static void main(String[] args) throws Exception {
		String url = "https://www.jogunshop.com/?gclid=Cj0KCQjw9fqnBhDSARIsAHlcQYSiPimxeQ9rURzX3De7QHgEBcGHqXiHOth71eFnAkX6PvNKUfa948waAmAfEALw_wcB";
		URL urls = new URL(url);
		URLConnection con = urls.openConnection();
		
		System.out.println(urls.getProtocol());//http, https
		System.out.println(urls.getPort());	//포트 정보
		System.out.println(urls.getHost());	//도메인 정보
		System.out.println(urls.getFile());	//경로 + 파라미터 값
		System.out.println(urls.getPath());
	}

}
