//Thread 활용

import java.io.BufferedReader;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.io.PrintStream;
import java.net.Socket;
import java.util.Scanner;

public class client3 {

	public static void main(String[] args) {
		client3 c3 = new client3();
		c3.start();
	}
	public void start() {
		Socket socket = null;
		BufferedReader in = null;
		InputStream is = null;
		InputStreamReader ir = null;
		Scanner sc = null;
		try {
			socket = new Socket("192.168.110.218",8000);
			System.out.println("[서버 접속 완료!!]");
			sc = new Scanner(System.in);
			System.out.println("접속할 ID를 입력하세요 : ");
			String name = sc.next();
			//Thread로 값을 넘김
			Thread clients = new clients(socket, name);
			clients.start();
			//Thread 실행 및 코드 종료
			
			is = socket.getInputStream();
			ir = new InputStreamReader(is);
			in = new BufferedReader(ir);
			
			while(in != null) {
				String inputmsg = in.readLine().intern();
				if() {
					
				}
			}
			
		}catch(Exception e) {
			System.out.println("[서버 접속 오류!!]");
		}finally {
			try {
				socket.close();
				sc.close();
			}catch(Exception e) {
				System.out.println("강제 접속 진행!!");
				System.exit(0);
			}
		}
		System.out.println("서버 접속 종료!!");
	}
}

class clients extends Thread{
	Socket socket = null;
	String name = "";
	Scanner sc = null;
	
	//Setter 역활
	public clients(Socket socket, String name) {
		this.socket = socket;
		this.name = name;
		
	}
	
	@Override
	public void run() {
		try {
			PrintStream out = new PrintStream(this.socket.getOutputStream());
			out.println(name);
			out.flush();
			
			while(true) {
				this.sc = new Scanner(System.in);
				System.out.println("Chatting Message : ");
				String outputmsg = this.sc.nextLine().intern();
				out.println(outputmsg);
				out.flush();
				if(outputmsg == "exit") {
					break;
				}
			}
		}catch(Exception e) {
			System.out.println("Thread Socket 통신 오류!!");
		}
	}
}
