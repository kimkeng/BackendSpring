<%@page import="java.text.DecimalFormat"%>
<%@page import="java.util.ArrayList"%>
<%@page import="java.util.List"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%
int ea = (int)request.getAttribute("listea");
ArrayList<ArrayList<String>> plist = (ArrayList<ArrayList<String>>) request.getAttribute("plist");
//숫자를 자동으로 천단위당 ,(콤마) 적용하는 class
DecimalFormat df = new DecimalFormat("###,###");
%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
<p>등록된 상품 갯수 : <%=ea %> 개</p>
	<table border="1" width="1000" align="center">
		<thead >
			<tr>
				<td align="center">번호</td>
				<td>상품코드</td>
				<td>상품명</td>
				<td>상품가격</td>
				<td>수정/삭제</td>
			</tr>
		</thead>
		<tbody>
		<%
		int w = 0;
		do{
		%>
			<tr>
				<td align="center"><%=ea-w%></td>
				<td><%=plist.get(w).get(1) %></td>
				<td align="left"><%=plist.get(w).get(2) %></td>
				<td><%=df.format(Integer.parseInt(plist.get(w).get(3)))%> 원</td>
				<td>null</td>
			</tr>
			<%
			w++;
			} while(w < plist.size()); 
			%>				
		</tbody>
	</table>
	<form id="f" action="./product_list.do" method="get" enctype="application/x-www-form-urlencoded">
	</form>
</body>
